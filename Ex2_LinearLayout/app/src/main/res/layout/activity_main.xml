<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textVD1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#EFE58F"
        android:padding="20dp"
        android:paddingStart="20dp"
        android:text="Ví dụ 1"
        android:textColor="#8011EF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/nutS01"
        android:text="NÚT SỐ 1"
        android:textSize="20dp"
        android:textColor="#FFEB3B"
        android:background="@color/material_dynamic_neutral_variant20"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/nutS02"
        android:text="NÚT SỐ 2"
        android:textSize="20dp"
        android:textColor="#3BFF45"
        android:background="@color/material_dynamic_neutral_variant20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/nutS03"
        android:text="NÚT SỐ 3"
        android:textSize="20dp"
        android:textColor="#3BFFC7"
        android:background="@color/material_dynamic_neutral_variant20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"/>


</LinearLayout>