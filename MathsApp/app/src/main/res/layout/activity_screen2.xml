<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen2Activity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FBDAB1">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_semibold"
                android:paddingTop="5dp"
                android:text="Math is Fun!"
                android:textColor="#EE8B60"
                android:textSize="48sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="121dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:fontFamily="@font/poppins_semibold"
                android:text="Modes"
                android:textColor="#EE8B60"
                android:textSize="36dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="430dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="433dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="205dp"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#B4F8C8">

                                    <TextView
                                        android:id="@+id/textView10"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|center"
                                        android:layout_marginBottom="20dp"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:text="Count"
                                        android:textColor="#18B74B"
                                        android:textSize="24dp" />

                                    <TextView
                                        android:id="@+id/textView19"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|top"
                                        android:layout_marginTop="40dp"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:text="1 2 3"
                                        android:textColor="#18B74B"
                                        android:textSize="24dp" />
                                </FrameLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="205dp"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#A0E7E5">

                                    <TextView
                                        android:id="@+id/textView15"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|center"
                                        android:layout_marginBottom="20dp"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:text="Match"
                                        android:textColor="#1BA7A6"
                                        android:textSize="24dp" />

                                    <ImageView
                                        android:id="@+id/imageView5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|top"
                                        android:layout_marginTop="20dp"
                                        app:srcCompat="@drawable/match" />
                                </FrameLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="205dp"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#FFAEBC">

                                    <TextView
                                        android:id="@+id/textView16"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|center"
                                        android:layout_marginBottom="20dp"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:text="Pattern"
                                        android:textColor="#BE3E53"
                                        android:textSize="24dp" />

                                    <ImageView
                                        android:id="@+id/imageView6"
                                        android:layout_width="55dp"
                                        android:layout_height="84dp"
                                        android:layout_gravity="center|top"
                                        android:layout_marginTop="20dp"
                                        app:srcCompat="@drawable/pattern" />
                                </FrameLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="205dp"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#FBE7C6">

                                    <TextView
                                        android:id="@+id/textView17"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom|center"
                                        android:layout_marginBottom="20dp"
                                        android:fontFamily="@font/poppins_semibold"
                                        android:text="Settings"
                                        android:textColor="#FFD76D"
                                        android:textSize="24dp" />

                                    <ImageView
                                        android:id="@+id/imageView7"
                                        android:layout_width="72.01dp"
                                        android:layout_height="71dp"
                                        android:layout_gravity="center|top"
                                        android:layout_marginTop="20dp"
                                        app:srcCompat="@drawable/settings" />
                                </FrameLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>